{
  "name": "@mcp-web/decompose-zod-schema",
  "version": "0.1.1",
  "description": "Utility for decomposing large Zod schemas into smaller, manageable sub-schemas with partial update support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "bin": {
    "@mcp-web/decompose-zod-schema": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "cli": "tsx src/cli.ts",
    "example": "tsx src/cli.ts -i examples/example-schema.ts -s userSchema -v"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "immer": "^10.1.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "tsx": "^4.16.0",
    "typescript": "catalog:"
  },
  "keywords": [
    "zod",
    "schema",
    "decomposition",
    "validation",
    "typescript",
    "partial-updates"
  ],
  "author": "MCP Frontend Integration System",
  "license": "MIT"
}
