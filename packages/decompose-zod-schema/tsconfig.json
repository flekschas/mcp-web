{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",

    /* Module resolution */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleDetection": "force",

    /* Node.js types */
    "types": ["node"],

    /* Declaration files */
    "declaration": true,
    "declarationMap": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "examples/**/*", "**/*.test.ts"]
}