{
  "name": "mcp-web",
  "version": "0.1.0",
  "description": "MCP integration for frontend web apps: expose state and actions as tools",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "build:packages": "pnpm --filter './packages/*' build",
    "dev": "pnpm -r dev",
    "clean": "pnpm -r clean",
    "test": "bun test packages",
    "test:types": "bun test packages/types/src",
    "test:client": "bun test packages/client/src",
    "test:bridge": "bun test packages/bridge/src",
    "test:decompose": "bun test packages/decompose-zod-schema/src",
    "test:integration": "bun test --max-concurrency=1 tests",
    "test:watch": "bun test --watch packages",
    "docs:generate": "typedoc --options typedoc.json && typedoc --options typedoc/web.json && typedoc --options typedoc/bridge.json && typedoc --options typedoc/client.json && typedoc --options typedoc/decompose-zod-schema.json && typedoc --options typedoc/integrations.json && typedoc --options typedoc/tools.json",
    "docs:dev": "pnpm docs:generate && vitepress dev docs",
    "docs:build": "pnpm docs:generate && vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "frontend",
    "browser-control",
    "bridge",
    "websocket",
    "automation"
  ],
  "author": "Fritz Lekschas (https://lekschas.de)",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.25.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "^1.3.0",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typedoc-vitepress-theme": "^1.1.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.3.0"
  }
}
