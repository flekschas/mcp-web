{
  "name": "mcp-web",
  "private": true,
  "version": "0.1.2",
  "description": "MCP integration for frontend web apps: expose state and actions as tools",
  "type": "module",
  "scripts": {
    "prepare": "lefthook install || true",
    "build": "pnpm -r build",
    "build:packages": "pnpm --filter './packages/*' build",
    "build:demos": "tsx scripts/build-demos.ts",
    "bundle:servers": "tsx scripts/bundle-servers.ts",
    "build:docs": "pnpm -C docs run build",
    "build:api-refs": "tsx scripts/generate-all-api-docs.ts docs/api/ && tsx scripts/generate-all-api-docs.ts agents/skills/mcp-web/ --prefix api-reference-",
    "dev": "pnpm -r dev",
    "clean": "pnpm -r clean",
    "test": "bun test packages && bun test tests/integration",
    "test:types": "bun test packages/types/src",
    "test:client": "bun test packages/client/src",
    "test:bridge": "bun test packages/bridge/src",
    "test:decompose": "bun test packages/decompose-zod-schema/src",
    "test:integration": "bun test --max-concurrency=1 tests",
    "test:watch": "bun test --watch packages",
    "bump": "tsx scripts/bump-version.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "frontend",
    "AI control",
    "web app",
    "automation"
  ],
  "author": "Fritz Lekschas (https://lekschas.de)",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.29.3",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "^1.3.0",
    "esbuild": "^0.25.0",
    "lefthook": "^2.0.15",
    "openai": "^4.103.0",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "engines": {
    "node": ">=24.0.0",
    "bun": ">=1.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flekschas/mcp-web"
  }
}
